<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1e3a7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/introText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="50"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="Press the button to "
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:textColor="#2B2628" />

            <TextView
                android:id="@+id/introText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="50"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:text="display your current location"
                android:background="#00000000"
                android:fontFamily="@font/quicksand"
                android:textSize="20sp"
                android:textColor="#2B2628" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="422dp"
                android:layout_below="@+id/button"
                android:layout_marginTop="30sp" />

            <ImageButton
                android:id="@+id/startButton"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:layout_marginTop="100sp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:cropToPadding="false"
                android:onClick="onClickEnableOrDisableActivityRecognition"
                android:scaleType="fitCenter"
                android:src="@drawable/locationbutton" />

            <Button
                android:id="@+id/again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/yValue"
                android:text="Do it again" />

            <TextView
                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="30sp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>